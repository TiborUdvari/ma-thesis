{
  "files.exclude": {
    "**/.git": false
  },
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "xelatex",
      "args": [
        "-xelatex",
        "-shell-escape", 
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "-outdir=%OUTDIR%",
        "%DOC%"
